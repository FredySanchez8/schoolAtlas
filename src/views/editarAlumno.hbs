<div class="container">
    <div class="row">
        <div class="col-md 5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white">
                <h4>Actualizar Alumno</h4>
                <form action="/alumnos/{{alumnos._id}}/update" method="POST">
                <div>
                    <label for="nombre">Modificar Nombre:</label>
                    <input type="text" name="nombre" placeholder="Nombre" 
                    value="{{alumnos.nombre}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="paterno">Modificar Apellido Paterno:</label>
                    <input type="text" name="paterno" placeholder="Paterno" 
                    value="{{alumnos.paterno}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="materno">Modificar Apellido Materno:</label>
                    <input type="text" name="materno" placeholder="Materno" 
                    value="{{alumnos.materno}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="fechaNacimiento">Modificar Fecha de Nacimiento:</label>
                    <input type="date" name="fechaNacimiento" placeholder="fechaNacimiento" 
                    value="{{alumnos.fechaNacimiento}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="sexo">Modificar Sexo:</label>
                    <input type="text" name="sexo" placeholder="Sexo"
                    value="{{alumnos.sexo}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="celular">Modificar Numero Celular:</label>
                    <input type="text" name="celular" placeholder="Celular" 
                    value="{{alumnos.celular}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="direccion">Modificar Direccion:</label>
                    <input type="text" name="direccion" placeholder="Direccion" 
                    value="{{alumnos.direccion}}" class="form-control bg-white text-black" />
                </div>
                <button class="btn btn-info">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>