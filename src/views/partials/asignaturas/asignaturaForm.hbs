<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h4>Agregar asignatura</h4>
    <form action="/asignaturas/agregar" method="POST">
        <div>
            <label for="nombre">Nombre: </label>
            <input type="text" name="nombre" placeholder="Nombre" id="nombre" class="form-control bg-white text-black"/>
        </div>
        <div>
            <label for="creditos">Creditos: </label>
            <input type="text" name="creditos" placeholder="Creditos" id="creditos" class="form-control bg-white text-black"/>
        </div>
        <div>
            <label for="horas">Horas: </label>
            <input type="text" name="horas" placeholder="Horas" id="horas" class="form-control bg-white text-black"/>
        </div>
        <button class="btn btn-success btn-sm mt-2">Agregar</button>
    </form>
</div>