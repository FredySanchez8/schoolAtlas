<div class="container">
    <div class="row">
        <div class="col-md 5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white">
                <h4>Actualizar Asignatura</h4>
                <form action="/asignaturas/{{asignaturas._id}}/update" method="POST">
                <div>
                    <label for="nombre">Modificar Nombre:</label>
                    <input type="text" name="nombre" placeholder="Nombre" 
                    value="{{asignaturas.nombre}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="creditos">Modificar Creditos:</label>
                    <input type="text" name="creditos" placeholder="Creditos" 
                    value="{{asignaturas.creditos}}" class="form-control bg-white text-black" />
                </div>
                <div>
                    <label for="horas">Modificar Horas:</label>
                    <input type="text" name="horas" placeholder="Horas" 
                    value="{{asignaturas.horas}}" class="form-control bg-white text-black" />
                </div>
                <button class="btn btn-info">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>